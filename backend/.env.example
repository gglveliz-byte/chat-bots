# ===========================================
# ChatBot SaaS - Variables de Entorno
# ===========================================
# Copia este archivo como .env y completa los valores
# NUNCA subas .env a Git
# ===========================================

# Servidor
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Base de datos PostgreSQL (Render)
DATABASE_URL=postgresql://user:password@host/database

# JWT Secrets (genera valores aleatorios seguros)
JWT_SECRET=tu_jwt_secret_aqui_cambiar_en_produccion
JWT_REFRESH_SECRET=tu_refresh_secret_aqui_cambiar_en_produccion

# OpenAI
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Webhook Security
WEBHOOK_API_KEY=tu_webhook_key_aqui_cambiar_en_produccion

# Meta API (configuración global - también se guarda en DB)
META_VERIFY_TOKEN=tu_verify_token_para_meta

# PayPal
PAYPAL_CLIENT_ID=tu_paypal_client_id
PAYPAL_SECRET=tu_paypal_secret
PAYPAL_MODE=sandbox

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASS=tu_app_password
SMTP_FROM=noreply@chatbot-saas.com

# ─── NUEVAS VARIABLES (Implementación P0/P1) ───

# Meta OAuth (Facebook Login para que clientes conecten sus cuentas)
META_APP_ID=tu_facebook_app_id
META_APP_SECRET=tu_meta_app_secret_para_verificar_webhooks
META_CONFIG_ID=tu_embedded_signup_config_id
BACKEND_URL=https://tu-backend.onrender.com

# Encriptación de tokens en DB
# Genera con: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=genera_un_hex_de_64_caracteres_aqui

# Telegram Bot (bot global del admin)
TELEGRAM_BOT_TOKEN=tu_telegram_bot_token
TELEGRAM_WEBHOOK_SECRET=tu_telegram_webhook_secret

# Admin (credenciales del administrador - NO se guarda en DB)
ADMIN_EMAIL=admin@tudominio.com
ADMIN_PASSWORD=tu_password_seguro
ADMIN_NAME=Administrador

# Desarrollo: Saltar verificación de webhook (NUNCA en producción)
SKIP_WEBHOOK_VERIFICATION=false
